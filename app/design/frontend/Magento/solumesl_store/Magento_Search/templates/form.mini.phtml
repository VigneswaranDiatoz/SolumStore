    {
        "*":{
            "Webkul_SolumeslStoreTheme/js/searchsection":{
                "controller": "<?=$block->getBaseUrl() . 'solumesltheme/index/searchsuggestion';?>",
                "min_search_query":"<?= $minSearchLength ; ?>"
            }
        }
    }
